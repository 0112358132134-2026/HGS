@model HGSModel.Bedpatient

@{
    Layout = null;
    ViewData["Title"] = "Editar Cita";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HGS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
    <link rel="icon" href="~/logo.ico" type="image/x-icon">
</head>

<div class="title">EDITAR CITA</div>

<div class="row">
    <div class="col">
        <div class="data">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Annotations" class="control-label">ANOTACIONES</label>
                    <input name="Annotations" placeholder="Ingrese alguna anotación del Paciente" class="form-control" />
                    <span asp-validation-for="Annotations" class="warning-message"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="State" class="control-label">¿DADO DE BAJA?</label>
                    <input asp-for="State" type="checkbox" class="form-check" />                    
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <input type="submit" value="Guardar cambios" class="btn btn-light" />
                </div>
            </form>
        </div>

    </div>
</div>

@if (@ViewData["Response"] != null)
{
    @if (@ViewData["Response"].Equals("Success"))
    {
        <script>
            function Error() {
                Swal.fire('OK', '¡Cita modificada existosamente!', 'success');
            }
        </script>
    }
    else if (@ViewData["Response"].ToString().Equals("Error"))
    {
        <script>
            function Error() {
                Swal.fire('Error', 'Ha ocurrido un error inesperado', 'error');
            }
        </script>
    }
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}