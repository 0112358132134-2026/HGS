@{
    Layout = null;
    ViewData["Title"] = "Inicio Sesión";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HGS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>

<body>
    <div class="login">                   
        <div class="text-center fs-3 fw-bold">
            INICIO SESIÓN
        </div>
        <form asp-action="Login">
            <div class="mt-4">
                <div>
                    <label for="username">Usuario</label>
                </div>
                <input class="form-control" type="text" name="username" required placeholder="Ingrese su usuario">
            </div>
            <div class="mt-3">
                <div>
                    <label for="password">Contraseña</label>
                </div>
                <input class="form-control" type="password" name="password" required placeholder="Ingrese su contraseña">
            </div>
            <div class="administradorContainer">
                <div>Soy un administrador</div>
                <div class="checkboxContainer">
                    <input type="checkbox" name="checkbox" class="mycheckbok" />
                </div>
            </div>
            <div class="d-grid gap-2 mt-3">
                <input class="btn btn-danger" type="submit" value="Ingresar">
            </div>
        </form>
        <div class="linksContainer">
            <div>
                <a asp-controller="Patient" asp-action="List" class="link">Solo soy un visitante</a>
            </div>
            <div>
                <a asp-controller="Home" asp-action="About" class="link">Acerca de nosotros</a>
            </div>
        </div>
    </div>
</body>

@if (@ViewData["Response"] != null)
{
    @if (@ViewData["Response"].ToString().Equals("Incorrect"))
    {
        <script>
            function Error() {
                Swal.fire('Error', 'Nombre o contraseña incorrecta', 'error');
            }
        </script>
    }
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>