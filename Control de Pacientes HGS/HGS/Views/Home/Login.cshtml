@{
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inicio Sesión</title>    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body class="d-flex justify-content-center align-items-center vh-100" style="background: url(../img/background.jpg) no-repeat center top; background-size: cover;">

    <div class="bg-black p-5 rounded-3 text-white" style="width: 320px;">
            
        <div class="d-flex justify-content-center">
            <img src="images/logo.png" alt="login-icon" style="width: 100px; height: 100px;">
        </div>

        <div class="text-center fs-3 fw-bold mt-3">
            Inicio Sesión
        </div>

        <form>
            <div class="mt-3">
                <div>
                    <label for="username">Usuario</label>
                </div>
                <input class="form-control" type="text" name="username" required placeholder="Ingrese su usuario">
            </div>

            <div class="mt-3">
                <div>
                    <label for="password">Contraseña</label>
                </div>
                <input class="form-control" type="password" name="password" required placeholder="Ingrese su contraseña">
            </div>

            <div class="d-grid gap-2 mt-3">
                <input class="btn btn-danger" type="button" value="Ingresar">
            </div>
        </form>

        <div class="text-center mt-3">
            <div>
                <a class="text-decoration-none text-white fw-semibold" href="manager.html">¿Solo eres un visitante?</a>
            </div>
            <div>
                <a class="text-decoration-none text-white fw-semibold" href="about.html">Acerca de nosotros</a>
            </div>
        </div>

    </div>
</body>

<style type="text/css">
    body {
        margin: 0;
        padding: 0;
        background: url(img/background.jpg) no-repeat center top;
        background-size: cover;
        font-family: sans-serif;
        height: 100vh;
    }
</style>