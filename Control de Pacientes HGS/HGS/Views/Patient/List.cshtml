@model IEnumerable<HGS.Models.Patient>

@{
    ViewData["Title"] = "Pacientes";
}


<div style="display:flex; flex-direction:column;">

    <div class="title">
        PACIENTES
    </div>

    <div style="display:flex; margin-bottom: 20px;">

        <div class="addBox">
            <a asp-action="Create" class="add">+</a>
        </div>

        <div class="textAdd">
            &larr; Añadir paciente
        </div>

        <div style="width:100%; margin-left: 10px;">
            <form asp-controller="Patient" asp-action="List" method="get" class="searchBar">

                <div>
                    <input type="text" placeholder="Ingrese un valor para buscar por:" name="toSearch" class="toSearch" />
                </div>

                <div>
                    <select name="optionSearch" id="optionSearch" class="select">
                        <option value="DPI">DPI</option>
                        <option value="NAME">Nombre</option>
                        <option value="LASTNAME">Apellido</option>
                    </select>
                </div>

                <div>
                    <input type="submit" value="Buscar" class="btn btn-sm btn-dark" style="width:100px;" />
                </div>

            </form>
        </div>

    </div>    

</div>

<table class="table table-striped">
    <thead>
        <tr class="table-danger">
            <th>
                DPI
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Fecha de nacimiento
            </th>
            <th>
                Observaciones
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dpi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observations)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><input type="submit" value="Editar" class="btn btn-danger" /></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><input type="submit" value="Detalles" class="btn btn-dark" /></a>
            </td>
        </tr>
}
    </tbody>
</table>

<style type="text/css">
    .title{                              
        font-size: 60px; 
        font-weight: bold;        
        width: 350px;
        text-align: left;
        display: flex;
        align-items: center;
        justify-content: left;
    }
    .addBox{
        background-color: #b80f22;
        width: 60px;
        display: flex;
        justify-content: center;          
    }
    .add{                         
        font-size: 40px;
        font-weight: bold;         
        text-decoration: none;        
        color: #FFF;        
    }
    .add:hover{
        color: #000;
    }
    .textAdd{
        display: flex;
        align-items: center;
        justify-content: center;
        width: 200px;
        border-width: 1px;
        border-style: solid;                
    }
    .searchBar {
        display:flex;                       
        background-color: #b80f22;
        padding: 5px;
        height: 100%;
        align-items: center;  
        justify-content: center;
    }
    .toSearch{        
        border: none;
        border-bottom: 2px solid #FFF;        
        background: #FFF;
        border-radius: 10px;
        color: #000;
        width: 300px;
        margin-left: 3px;
        margin-right: 5px;
        text-align: left;
    }
    .toSearch::placeholder {
        color: #000;        
        text-align: center;
    }
    .select{
        margin-right: 5px;
        width: 120px;
    }
    .toCenter{
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;                
    }
</style>                