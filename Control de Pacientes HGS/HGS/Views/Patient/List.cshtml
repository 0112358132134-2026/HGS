<link rel="stylesheet" href="~/css/listView.css" asp-append-version="true" />
@model IEnumerable<HGS.Models.Patient>

@{
    ViewData["Title"] = "Pacientes";
}

<div class="container">
    <div class="title">
        PACIENTES
    </div>
    <div class="addContainer">
        <div class="addBox">
            <a asp-action="Create" class="add">+</a>
        </div>
        <div class="addText">
            &larr; Añadir Paciente
        </div>
        <div style="width:850px; margin-left: 90px;">
            <form asp-controller="Patient" asp-action="List" method="get" class="searchBar">
                <div>
                    <input type="text" placeholder="Ingrese un texto a buscar..." name="toSearch" class="toSearch" />
                </div>
                <div>
                    <select name="optionSearch" id="optionSearch" class="select">
                        <option value="DPI">DPI</option>
                        <option value="NAME">Nombre</option>
                        <option value="LASTNAME">Apellido</option>
                    </select>
                </div>
                <div>
                    <input type="submit" value="Buscar" class="btn btn-sm btn-dark" style="width:100px; height: 35px;" />
                </div>
            </form>
        </div>
    </div>    
</div>

<table class="table table-striped" style="margin-bottom:100px;">
    <thead>
        <tr class="table-danger">
            <th>
                DPI
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Fecha de nacimiento
            </th>
            <th>
                Observaciones
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dpi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observations)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><input type="submit" value="Editar" class="btn btn-danger" /></a>
                <a asp-action="Details" asp-route-id="@item.Id"><input type="submit" value="Detalles" class="btn btn-dark" /></a>
            </td>
        </tr>
}
    </tbody>
</table>