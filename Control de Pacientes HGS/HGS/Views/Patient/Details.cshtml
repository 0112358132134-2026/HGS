@model HGSModel.Patient

@{
    ViewData["Title"] = "Details";
}

<div class="title">DETALLES DEL PACIENTE</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            DPI
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Dpi)
        </dd>
        <dt class = "col-sm-4">
            NOMBRE
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-4">
            APELLIDO
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
        <dt class = "col-sm-4">
            FECHA DE NACIMIENTO
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Birthdate)
        </dd>
        <dt class = "col-sm-4">
           OBSERVACIONES
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Observations)
        </dd>
    </dl>
</div>
<hr />

<div>
    <a asp-action="list" class="return">< Regresar</a> |    
</div>

<style type="text/css">
    .title{
        padding: 10px;
        font-size: 30px;
        font-weight: bold;
    }
    .return {
        text-decoration: none;
        font-size: 20px;
        font-weight: bold;
        margin: 5px;
    }    
</style>