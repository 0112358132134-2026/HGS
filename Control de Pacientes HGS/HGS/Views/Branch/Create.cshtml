<link rel="stylesheet" href="~/css/createView.css" asp-append-version="true" />
@model HGSModel.Branch

@{
    ViewData["Title"] = "Añadir Municipio";
}

<div class="title">AÑADIR MUNICIPIO</div>

<div class="row">
    <div class="col">
        <div class="formContainer">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Municipality" class="control-label">Municipio</label>
                    <input asp-for="Municipality" placeholder="Ingrese nombre del municipio" class="form-control" />
                    <span asp-validation-for="Municipality" class="warning-message"></span>
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <input type="submit" value="Añadir Municipio" class="btn btn-light" />
                </div>
            </form>
        </div>
    </div>
    <div class="col" style="flex-direction:column;padding:30px;">
        <div class="information">
            Añade el municipio de la sede que deseas agregar
            al sistema. Si deseas saber si el municipio ya está
            en el sistema, puedes dar click en el botón "Regresar".
        </div>
        <div>
            <a asp-action="List">
                <input type="submit" value="↻ Regresar" class="btn btn-dark" style="width:200px;" />
            </a>
        </div>
    </div>

</div>

@if (@ViewData["Response"] != null)
{
    @if (@ViewData["Response"].ToString().Equals("Success"))
    {
        <script>
            function Error() {
                Swal.fire('OK', '¡Municipio ingresado existosamente!', 'success');
            }
        </script>
    }
    else if (@ViewData["Response"].ToString().Equals("Unsuccessfully"))
    {
        <script>
            function Error() {
                Swal.fire('Advertencia', '¡Este municipio ya ha sido ingresado!', 'info');
            }
        </script>
    }
    else if (@ViewData["Response"].ToString().Equals("Error"))
    {
        <script>
            function Error() {
                Swal.fire('Error', 'Ha ocurrido un error inesperado', 'error');
            }
        </script>
    }
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}