@model HGSModel.Bedpatient

@{
    ViewData["Title"] = "Detalles";
}

<div class="title">DETALLES DE LA CITA</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            CAMA
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.BedId)
        </dd>
        <dt class="col-sm-4">
            PACIENTE
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.PatientName)
        </dd>
        <dt class="col-sm-4">
            MOTIVO
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class="col-sm-4">
            ESTADO
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-4">
            DOCTOR
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.DoctorName)
        </dd>
        <dt class="col-sm-4">
            ANOTACIONES
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Annotations)
        </dd>
        <dt class="col-sm-4">
            FECHA INICIO
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-4">
            FECHA FIN
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
    </dl>
</div>

<hr />

<div>
    <a asp-action="List">
        <input type="submit" value="↻ Regresar" class="btn btn-dark" style="width:200px;" />
    </a>
</div>

<style type="text/css">
    .title {
        font-size: 30px;
        font-weight: bold;
    }
</style>