<link rel="stylesheet" href="~/css/createView.css" asp-append-version="true" />
@model HGSModel.Speciality

@{
    ViewData["Title"] = "Añadir Especialidad";
}

<div class="title">AÑADIR ESPECIALIDAD</div>

<div class="row">
    <div class ="col">
        <div class="formContainer">
            <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">NOMBRE</label>
                    <input asp-for="Name" placeholder="Ingrese el nombre de la especialidad" class="form-control" />
                    <span asp-validation-for="Name" class="warning-message"></span>
            </div>
            <div class="form-group d-grid gap-2 mt-3">
                <input type="submit" value="Añadir especialidad" class="btn btn-light" />
            </div>
        </form>
        </div>         
    </div>
    <div class="col" style="flex-direction:column;padding: 30px;">
        <div class="information">
            Acá puede agregar una Especialidad. Una Especialidad es el área en donde un Doctor es experto (Ej. Cirugía General, 
            Dermatología, Cardiología, Ginecología, etc.).
        </div>
        <div>
            <a asp-action="List">
                <input type="submit" value="↻ Regresar" class="btn btn-dark" style="width:200px;" />
            </a>
        </div>
    </div>
</div>

@if (@ViewData["Response"] != null)
{    
    @if (@ViewData["Response"].ToString().Equals("Success"))
    {   
        <script>
            function Error() {
                Swal.fire('Éxito','¡Especialidad ingresado existosamente!','success');
            }
        </script>                
    }
    else if (@ViewData["Response"].ToString().Equals("Unsuccessfully"))
    {             
        <script>
            function Error() {
                Swal.fire('Advertencia','¡Esta especialidad ya ha sido ingresada!','info');
            }
        </script>        
    }
    else if (@ViewData["Response"].ToString().Equals("Error"))
    {
        <script>
            function Error() {
                Swal.fire('Error', 'Ha ocurrido un error inesperado', 'error');
            }
        </script>
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}