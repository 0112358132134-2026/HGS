<link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />
@model HGSModel.Area

@{
    ViewData["Title"] = "Editar Área";
}

<div class="title">EDITAR ÁREA</div>

<div class="row">
    <div class="col">
        <div class="data">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">NOMBRE</label>
                    <input asp-for="Name" placeholder="Ingrese el nombre del área" class="form-control" />
                    <span asp-validation-for="Name" class="waring-message"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Description" class="control-label">DESCRIPCIÓN</label>
                    <input asp-for="Description" placeholder="Ingrese una breve descripción del área" class="form-control" />
                    <span asp-validation-for="Description" class="waring-message"></span>
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <input type="submit" value="Guardar cambios" class="btn btn-light" />
                </div>
            </form>
        </div>        
    </div>
</div>

<div style="padding: 30px;">
    <a asp-action="List">
        <input type="submit" value="↻ Regresar" class="btn btn-dark" style="width:200px;" />
    </a>
</div>

@if (@ViewData["Response"] != null)
{
    @if (@ViewData["Response"].Equals("Success"))
    {
        <script>
            function Error() {
                Swal.fire('OK', '¡Área modificada existosamente!', 'success');
            }
        </script>
    }  
    else if (@ViewData["Response"].Equals("Unsuccessfully"))
    {
        <script>
            function Error() {
                Swal.fire('Advertencia', '¡Esta área ya ha sido ingresada!', 'info');
            }
        </script>
    }
    else if (@ViewData["Response"].Equals("Error"))
    {
        <script>
            function Error() {
                Swal.fire('Error', 'Ha ocurrido un error inesperado', 'error');
            }
        </script>
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}