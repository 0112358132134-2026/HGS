@model HGSModel.Area

@{
    ViewData["Title"] = "Edit";
}

<div class="title">EDITAR ÁREA</div>

<div class="row">
    <div class="col" style="display:flex;align-items:center;justify-content:center;">
        <div class="data">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">NOMBRE</label>
                    <input asp-for="Name" placeholder="Ingrese el nombre del área" class="form-control" />
                    <span asp-validation-for="Name" class="waring-message"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Description" class="control-label">DESCRIPCIÓN</label>
                    <input asp-for="Description" placeholder="Ingrese una breve descripción del área" class="form-control" />
                    <span asp-validation-for="Description" class="waring-message"></span>
                </div>
                <div class="form-group d-grid gap-2 mt-3">
                    <input type="submit" value="Guardar cambios" class="btn btn-light" />
                </div>
            </form>
        </div>        
    </div>
</div>

<style type="text/css">
    .title {
        padding: 20px;
        text-align: center;
        font-size: 40px;
        font-weight: bold;
        border-bottom: 5px solid #000;
    }
    .control-label {
        color: #FFF;
        font-weight: bold;
    }
    .form-control {
        border: none;
        border-bottom: 2px solid #FFF;
        border-radius: 0px;
        background: transparent;
        color: #FFF;
    }
    .form-control:read-only {
        background: transparent;
        color: #000;
    }
    .form-control::placeholder {
        color: #FFF;
    }
    .form-control:focus {
        background: transparent;
        color: #FFF;
    }
    .data {
        width: 550px;
        padding: 50px;
        margin-top: 40px;
        margin-bottom: 40px;
        background-color: #FE903F;
    }
    .warning-message {
        color: #000;
    }
    .col {
        border-bottom: 5px solid #000;
    }
    .return {
        text-decoration: none;
        font-size: 20px;
        font-weight: bold;
        margin: 5px;
    }
</style>

<div style="padding: 30px;">
    <a asp-action="List" class="return">< REGRESAR</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
