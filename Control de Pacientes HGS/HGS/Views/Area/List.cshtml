<link rel="stylesheet" href="~/css/listView.css" asp-append-version="true" />
@model IEnumerable<HGS.Models.Area>

@{
    ViewData["Title"] = "Áreas";
}

<div class="container">
    <div class="title">
        ÁREAS
    </div>
    <div class="addContainer">
        <div class="addBox">
            <a asp-action="Create" class="add">+</a>
        </div>
        <div class="addText">
            &larr; Añadir Área
        </div>
    </div>
</div>

<table class="table table-striped" style="margin-bottom:100px;">
    <thead>
        <tr class="table-danger">
            <th>
                NOMBRE
            </th>
            <th>
                DESCRIPCIÓN
            </th>
            <th>                
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><input type="submit" value="Editar" class="btn btn-danger" /></a>
            </td>
        </tr>
}
    </tbody>
</table>